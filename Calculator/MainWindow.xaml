<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        xmlns:mD="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Калькулятор" Width="400" Height="300" MaxWidth="800" MaxHeight="300" MinWidth="600" MinHeight="300">
    <Grid>
        <TextBox x:Name="EquationTextBox" HorizontalAlignment="Left" Margin="40,30,0,0" mD:HintAssist.Hint="Введите уравнение" TextWrapping="NoWrap" VerticalAlignment="Top" Width="160" Height="28" BorderThickness="1,1,1,1" BorderBrush="Gray" KeyUp="EquationTextBox_Input"/>
        <Button x:Name="SolveButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,80,0,0" Width="150" Height="25" Content="Решить уравнение" FontSize="13" Click="SolveButton_Click"/>
        <TextBox x:Name="SolutionTextBox" HorizontalAlignment="Left" Margin="340,30,0,0" mD:HintAssist.Hint="Ответ:" TextWrapping="NoWrap" VerticalAlignment="Top" Width="160" BorderThickness="1,1,1,1" IsReadOnly="True"/>
    </Grid>
</Window>
